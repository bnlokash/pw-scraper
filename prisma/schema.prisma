datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id       Int       @id @default(autoincrement())
  indeedId String
  keywords JobTech[]
}

model Tech {
  id       Int       @id @default(autoincrement())
  name     String
  jobs     JobTech[]
  keywords Keyword[]
}

model Keyword {
  id     Int    @id @default(autoincrement())
  tech   Tech   @relation(fields: [techId], references: [id])
  techId Int
  name   String
}

model JobTech {
  job    Job  @relation(fields: [jobId], references: [id])
  jobId  Int
  tech   Tech @relation(fields: [techId], references: [id])
  techId Int

  @@id([jobId, techId])
}
